<h3 class="text-center mt-4">Carrito</h3>
{{#if cart}}
{{#each cart}}
<div class="d-flex justify-content-center col-12">
  <div class="border rounded-2 col-6 mt-3 mb-3 p-3">
    <p class="text-center fw-semibold">{{this.product.title}}</p>
    <p>{{this.product.description}}</p>
    <p>Cantidad: {{this.quantity}}</p>
  </div>
</div>
{{/each}}
{{else}}
<div class="mt-5 text-center">Aun no has agregado nada al carrito</div>
{{/if}}