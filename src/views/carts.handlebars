
<h3 class="text-center mt-4">Carrito</h3>
{{#if cart}}
{{#each cart}}
<div class="d-flex justify-content-center col-12 div__container--cart" data-product-id="{{this.product._id}}">
  <div class="border rounded-2 col-6 mt-3 mb-3 p-3">
    <p class="text-center fw-semibold">{{this.product.title}}</p>
    <p>{{this.product.description}}</p>
    <p>Cantidad: {{this.quantity}}</p>
    <div class="d-flex justify-content-end">
      <button class="m-2 rounded-circle ps-2 pe-2 add__product">+</button>
      <button class="m-2 rounded-circle ps-2 pe-2 fs-5 btn__delete">-</button>
    </div>
  </div>
</div>
{{/each}}

<div class="d-flex justify-content-center">
<button class="btn btn-success m-3" id="btn__confirmPurchase" data-cart-id="{{cartId}}">Finalizar Compra</button>
<button class="btn btn-danger m-3 pe-4 ps-4" id="btn__emptyCart">Vaciar Carrito</button>
</div>

{{else}}
<div class="mt-5 text-center">Aun no has agregado nada al carrito</div>
{{/if}}

<script src="/js/mainCart.js"></script>