<h3 class="text-center mt-3 mb-3">Usuarios Registrados:</h3>
{{#if message}}
<h6 class="text-center mt-5">El Ãºnico usuario registrado es el Administrador. {{message}}</h6>
{{/if}}
{{#each user}}
<div class=" user__table">
    <div class="d-flex justify-content-center mt-5 p-3">
        <div class="col-5">
            <table class="w-100">
                <tr>
                    <th class="p-1 align-self-start col-4">Nombre :</th>
                    <td class="p-1 align-self-end col-8 first_name">{{this.name}}</td>
                </tr>
                <tr>
                    <th class="p-1 align-self-start col-4">Apellido :</th>
                    <td class="p-1 align-self-end col-8 last_name">{{this.last_name}}</td>
                </tr>
                <tr>
                    <th class="p-1 align-self-start col-4">ID :</th>
                    <td class="p-1 align-self-end col-8 uid">{{this._id}}</td>
                </tr>
                <tr>
                    <th class="p-1 align-self-start col-4">Rol :</th>
                    <td class="p-1 align-self-end col-8">( {{this.role}} )</td>
                </tr>
            </table>
        </div>

        <div class="d-flex flex-column justify-content-center">
            <button class="mt-3 btn btn-danger border-danger rounded-2 text-decoration-none btn__deleteUser">Eliminar
                Usuario</button>
            <button class="mt-3 btn btn-warning border-warning rounded-2 text-decoration-none btn__changeRol">Cambiar
                Rol</button>
        </div>
    </div>
    <div class="div__container--formUploads d-flex justify-content-center w-100"></div>
</div>

{{/each}}



